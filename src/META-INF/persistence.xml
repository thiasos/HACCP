<?xml version="1.0" encoding="UTF-8"?>
	<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	        version="2.0">
	
	        <persistence-unit name="haccp">
	                <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
	                <exclude-unlisted-classes>false</exclude-unlisted-classes>
	                <properties>
	                        <property name="eclipselink.jdbc.platform"
	                                value="org.eclipse.persistence.platform.database.MySQLPlatform" />
	                        <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
	                        <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/HACCP" />
	                        <property name="javax.persistence.jdbc.user" value="haccp" />
	                        <property name="javax.persistence.jdbc.password" value="roberto.2867" />
	                        <property name="eclipselink.logging.level" value="FINE" />
	                        <property name="eclipselink.ddl-generation" value="create-tables" />
	                        <property name="eclipselink.application-location" value="d:/devel/sql/haccp" />
	                        <property name="eclipselink.ddl-generation.output-mode"
	                                value="both" />
	                </properties>
	        </persistence-unit>
	
	</persistence>